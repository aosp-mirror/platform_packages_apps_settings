<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" >

    <Preference
        android:fragment="com.android.settings.purity.LockscreenTargets"
        android:key="lockscreen_targets"
        android:summary="@string/lockscreen_target_summary"
        android:title="@string/lockscreen_target_title" />

    <PreferenceCategory
        android:title="@string/lockscreen_widgets_category_title"
        android:key="lockscreen_widgets_category" >

        <CheckBoxPreference
            android:key="keyguard_enable_widgets"
            android:title="@string/lockscreen_custom_widgets_title" />

        <CheckBoxPreference
                android:key="keyguard_enable_camera"
                android:title="@string/lockscreen_enable_camera_title" />

        <com.android.settings.purity.SystemSettingCheckBoxPreference
            android:key="lockscreen_maximize_widgets"
            android:summary="@string/lockscreen_maximize_widgets_summary"
            android:title="@string/lockscreen_maximize_widgets_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="lockscreen_background_category"
        android:title="@string/lockscreen_background">

        <ListPreference
            android:key="lockscreen_background_style"
            android:persistent="false"
            android:dialogTitle="@string/lockscreen_background_style_title"
            android:title="@string/lockscreen_background_style_title"
            android:entries="@array/lockscreen_background_entries"
            android:entryValues="@array/lockscreen_background_values" />

        <com.android.settings.purity.SeekBarPreference
            android:key="lockscreen_wallpaper_alpha"
            android:title="@string/opacity"
            android:defaultValue="100" />

    </PreferenceCategory>

</PreferenceScreen>
